<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PriDocFragment">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_view_pri_doc"
        android:background="@drawable/shape_for_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.SearchView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_pri_doc"
        android:layout_width="match_parent"
        android:background="@color/backgroundGray"
        android:layout_height="0dp"
        android:padding="@dimen/nano_border"
        app:layout_constraintTop_toBottomOf="@id/search_view_pri_doc"
        app:layout_constraintBottom_toBottomOf="@id/guide_line_pri_doc_bt"/>

    <android.support.constraint.Guideline
        android:id="@+id/guide_line_pri_doc_bt"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.9"/>

</android.support.constraint.ConstraintLayout>