<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_for_article_item"
    android:layout_marginTop="@dimen/mini_border"
    android:layout_marginBottom="@dimen/mini_border"
    android:layout_marginStart="@dimen/small_border"
    android:layout_marginEnd="@dimen/small_border"
    android:padding="@dimen/small_border">

    <ImageView
        android:id="@+id/image_view_doctor_article_pic"
        android:layout_width="match_parent"
        android:background="@drawable/shape_for_article_pic"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_doctor_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/nano_border"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_marginStart="@dimen/small_border"
        app:layout_constraintBottom_toBottomOf="@id/image_view_doctor_article_pic"/>

    <ImageView
        android:id="@+id/image_view_doctor_article_icon"
        android:background="@drawable/shape_for_icon_background"
        android:layout_marginTop="@dimen/mini_border"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_doctor_article_pic"/>

    <TextView
        android:id="@+id/text_view_doctor_article_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mini_border"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/image_view_doctor_article_icon"
        app:layout_constraintLeft_toRightOf="@id/image_view_doctor_article_icon"/>

</android.support.constraint.ConstraintLayout>