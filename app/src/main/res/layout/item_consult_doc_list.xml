<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/mini_border"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/mini_border"
    android:background="@drawable/shape_for_consult_doc_item"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_consult_doc_icon"
        android:scaleType="fitXY"
        android:layout_width="81dp"
        android:layout_height="81dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_view_consult_doc_grade"
        android:background="@drawable/shape_for_doctor_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/text_view_consult_doc_name"
        app:layout_constraintLeft_toRightOf="@id/text_view_consult_doc_name"/>

    <TextView
        android:id="@+id/text_view_consult_doc_name"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_view_consult_doc_icon"/>

    <ImageButton
        android:id="@+id/image_button_consult_doc_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>