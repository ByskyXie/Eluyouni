<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:focusable="true"
    android:clickable="true"
    android:paddingTop="@dimen/small_border"
    android:paddingBottom="@dimen/small_border"
    android:background="@drawable/shape_for_medicine_recycler_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<!-- 展示具体名医的item -->
    <ImageView
        android:id="@+id/image_view_medicine_famous_icon"
        android:src="@mipmap/doctor_man"
        android:scaleType="fitCenter"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/text_view_medicine_famous_name"
        android:textSize="17sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_medicine_famous_ill"
        android:textColor="@color/coldGray"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>