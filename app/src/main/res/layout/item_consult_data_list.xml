<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/nano_border"
    android:padding="@dimen/nano_border"
    android:background="@drawable/shape_for_consult_data_item"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view_consult_data_pic"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="128dp"/>

    <TextView
        android:id="@+id/text_view_consult_data_name"
        android:maxWidth="92dp"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_view_consult_data_pic"/>

    <ImageButton
        android:id="@+id/image_button_consult_data_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_delete"
        app:layout_constraintRight_toRightOf="@id/image_view_consult_data_pic"
        app:layout_constraintTop_toTopOf="@id/image_view_consult_data_pic"/>

</android.support.constraint.ConstraintLayout>