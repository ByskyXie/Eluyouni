<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/mini_border"
    android:layout_marginBottom="@dimen/mini_border"
    android:layout_marginStart="@dimen/small_border"
    android:layout_marginEnd="@dimen/small_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_chat_time_sys"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/image_view_chat_icon_sys"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_view_chat_content_sys"
        android:layout_marginStart="@dimen/small_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/small_border"
        android:paddingEnd="@dimen/small_border"
        android:maxWidth="280dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:background="@drawable/shape_for_chat_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_view_chat_icon_sys"
        app:layout_constraintLeft_toRightOf="@id/image_view_chat_icon_sys"/>

</android.support.constraint.ConstraintLayout>