<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrayBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkGrayBlue</item>
        <item name="colorAccent">@color/deepSkyBlue</item>
    </style>

    <!-- Basic theme -->
    <style name="NewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGrayBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkGrayBlue</item>
        <item name="colorAccent">@color/lightSkyBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NewTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NewTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NewTheme.Activity.Anim" parent="NewTheme">
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <!-- 从名为A的activity跳转到B，B也可以跳转到C，其中转场动画设置在B上。 -->
    <style name="ActivityAnim">
        <!-- 进入B时的动画 -->
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <!-- 进入B时A的动画 -->
        <item name="android:activityOpenExitAnimation">@anim/activity_still</item>
        <!-- 跳转到C后再回退到B时，B的进入动画 -->
        <item name="android:activityCloseEnterAnimation">@anim/activity_still</item>
        <!-- 跳转到C后再回退到B时，C的退出动画 -->
        <item name="android:activityCloseExitAnimation">@anim/activity_out</item>
    </style>

    <!--<style name="NewPopupOverlay" parent="@style/ThemeOverlay.AppCompat.ActionBar">-->
        <!--<item name="android:colorBackground">@color/colorGrayBlue</item>-->
        <!--<item name="android:textColorPrimary">@color/white</item>-->
    <!--</style>-->

</resources>
